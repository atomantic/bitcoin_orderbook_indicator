body
  margin: 0
  padding: 50px 0 0
  font-family: monospace
  &.disconnected
    .connected
      display:none
    .disconnected
      display:inline-block
  &.connected
    .connected
      display:inline-block
    .disconnected
      display:none
  .container
    padding: 0px


.navbar
  min-height: 30px
  .container
    position: relative


.fullpanel
  text-align:center
  width:100%


.navbar-right
    float: right !important

@media (min-width: 768px)
  .navbar-nav.navbar-right:last-child
      margin: 0 -15px

  .navbar-nav > li > a
      padding: 10px 15px

.navbar-nav > li
    float: left

.navbar-nav > li > a
    padding-bottom: 0

.navbar-inverse
  color: #ccc

.navbar-header
  float: left

.navbar-brand
  height: auto
  font-size: 16px
  line-height: 16px
  padding: 10px
  .icon
    font-size:24px
    vertical-align: middle
    position:relative
    top:2px
    margin-right: 5px

.emoticon
  float: left
.panel-body
  position: relative
  padding: 15px 15px
  font-family: Helvetica Neue, Arial, sans-serif

.bs-callout
  margin: 20px 0
  padding: 20px
  border-left: 3px solid #eee
  h4
    margin-top: 0
    margin-bottom: 5px

  p:last-child
    margin-bottom: 0

.bs-callout-danger
  background-color: #fdf7f7
  border-color: #eed3d7
  h4, h5
    color: #b94a48

.bs-callout-warning
  background-color: #faf8f0
  border-color: #faebcc
  h4, h5
    color: #8a6d3b

.bs-callout-info
  background-color: #f4f8fa
  border-color: #bce8f1
  h4, h5
    color: #34789a

.bs-callout-success
  background-color: #dff0d8
  border-color: #d6e9c6
  h4, h5
    color: #3c763d

.bs-callout .alert
  max-width: 50%
  float: left

.led
  margin-top: -5px
  width: 18px
  height: 18px
  border-radius: 50%
  background-color: rgba(255, 255, 255, 0.25)
  box-shadow: #999 0 -1px 6px 1px
  vertical-align: middle

.led-red
  background-color: red
  box-shadow: #999 0 -1px 6px 1px,inset #600 0 -1px 8px,red 0 3px 11px

.led-orange
  background-color: #ff7000
  box-shadow: #999 0 -1px 6px 1px,inset #630 0 -1px 8px,#ff7000 0 3px 11px

.led-yellow
  background-color: #ff0
  box-shadow: #999 0 -1px 6px 1px,inset #660 0 -1px 8px,#ff0 0 3px 11px

.led-green
  background-color: #80ff00
  box-shadow: #999 0 -1px 6px 1px,inset #460 0 -1px 8px,#80ff00 0 3px 11px

.led-blue
  background-color: #06f
  box-shadow: #999 0 -1px 6px 1px,inset #006 0 -1px 8px,#06f 0 3px 11px

a[href]
  cursor: pointer

#footpad
  margin-bottom:100px

.arrow
  display: inline-block
  vertical-align: middle
  width: 0
  height: 0
  margin-left: 5px
  opacity: 0.66

.arrow.asc
  border-left: 4px solid transparent
  border-right: 4px solid transparent
  border-bottom: 4px solid #fff

.arrow.dsc
  border-left: 4px solid transparent
  border-right: 4px solid transparent
  border-top: 4px solid #fff

.area
  fill: lightsteelblue
